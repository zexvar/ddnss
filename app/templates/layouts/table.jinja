{% extends "layouts/main.jinja" %}
<!-- main block -->
{% block main %}
<script type="text/javascript">
  function viewPage(element) {
    var params = new URLSearchParams(location.search);
    params.set("page", element.dataset.page);
    // console.log(location.origin + params.toString())
    location.search = params.toString();
  }

  function goToPage(element) {
    page = element.value;
    // same page
    if (page == element.dataset.page) {
      return;
    } else if (page < element.min || page > element.max) {
      element.value = element.dataset.page;
    } else {
      element.dataset.page = page;
      viewPage(element);
    }
  }
</script>
<h1 class="my-3 fw-bold">{% block table_title %}{% endblock table_title%}</h1>
<div class="card p-3">
  <div class="table-responsive">
    <table class="table table-hover">
      {% block table_content %}{% endblock table_content%}
    </table>
  </div>
  <div class="row g-3">
    <hr class="d-md-none m-2" style="border: 0px solid" />
    <div class="col">
      <label class="text-nowrap">
        <span class="fw-bold">{{ pagination.count }} pages.</span>Current page is
      </label>
      <input
        type="number"
        class="form-control d-inline"
        style="width: 72px"
        min="1"
        max="{{ pagination.max }}"
        pattern="\d*"
        value="{{ pagination.curr }}"
        data-page="{{ pagination.curr }}"
        onblur="goToPage(this)"
      />
    </div>
    <div class="col align-items-center mt-3">
      <div class="pagination justify-content-center">
        <a
          class="btn btn-dark {% if not pagination.prev %}disabled{% endif %}"
          onclick="viewPage(this)"
          data-page="{{ pagination.prev or '#' }}"
          >&laquo;</a
        >

        {% set delta = 2 %} {% set start = pagination.curr - delta if pagination.curr - delta > 1 else 1 %} {% set end =
        pagination.curr + delta if pagination.curr + delta < pagination.count else pagination.count %} {% if start> 1 %}
        <a class="btn btn-dark" onclick="viewPage(this)" data-page="1">1</a>
        {% if start > 2 %}
        <span class="btn btn-dark disabled">...</span>
        {% endif %} {% endif %} {% for item in range(start, end + 1) %}
        <a
          class="btn {% if item == pagination.curr %} btn-primary {% else %} btn-dark {% endif %}"
          onclick="viewPage(this)"
          data-page="{{ item }}"
          >{{ item }}</a
        >
        {% endfor %} {% if end < pagination.count %} {% if end < pagination.count - 1 %}
        <span class="btn btn-dark disabled"> ...</span>
        {% endif %}
        <a class="btn btn-dark" onclick="viewPage(this)" data-page="{{ pagination.count }}">{{ pagination.count }}</a>
        {% endif %}

        <a
          class="btn btn-dark {% if not pagination.next %}disabled{% endif %}"
          onclick="viewPage(this)"
          data-page="{{ pagination.next or '#' }}"
          >&raquo;</a
        >
      </div>
    </div>
  </div>
</div>
{% endblock %}

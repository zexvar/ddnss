{% extends "layouts/table.jinja" %}

<!-- title block -->
{% block title %} History {% endblock %}

<!-- table_title block -->
{% block table_title %} Record history {% endblock %}

<!-- table_content block -->
{% block table_content %}
<thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Type</th>
    <th>Content</th>
    <th>Success</th>
    <th>Time</th>
  </tr>
</thead>
<tbody>
  {% for item in items %}
  <tr>
    <td>{{ item.id }}</td>
    <td>{{ item.name }}</td>
    <td>{{ item.type }}</td>
    <td>{{ item.content }}</td>
    <td>
      <span class="badge {% if item.success == False %} bg-danger {% else %} bg-success {% endif %}">
        {{ item.success }}
      </span>
    </td>
    <td>{{ item.create_time.strftime("%Y-%m-%d %H:%M:%S") }}</td>
  </tr>
  {% endfor %}
</tbody>


{% endblock %}
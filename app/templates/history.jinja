{% extends "layouts/table.jinja" %}

<!-- breadcrumbs block -->
{% block breadcrumbs %}
<div class="breadcrumbs text-sm">
  <ul>
    <li><a href="#">Home</a></li>
    <li><a a hx-get="/history" hx-target="main">History</a></li>
  </ul>
</div>
{% endblock %}

<!-- title block -->
{% block title %} History {% endblock %}

<!-- table_title block -->
{% block table_title %} Record history {% endblock %}

<!-- table_content block -->
{% block table_content %}
<thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Type</th>
    <th>Success</th>
    <th>Time</th>
  </tr>
</thead>
<tbody>
  {% for item in items %}
  <tr class="hover:bg-base-300">
    <td>{{ item.id }}</td>
    <td>{{ item.name }}</td>
    <td>{{ item.type }}</td>
    <td>
      <span class="badge {% if item.success == False %} badge-error {% else %} badge-success" {% endif %}">
        {{ item.success }}
      </span>
    </td>
    <td>{{ item.create_time.strftime("%Y-%m-%d %H:%M:%S") }}</td>
  </tr>
  {% endfor %}
</tbody>

{% endblock %}
